{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist",
    "src/fix-imagenes-proyectos.ts",
    "src/seed-proveedor.ts",
    "src/seed-proyectos-completo.ts",
    "src/seed-proyectos-referencia.ts",
    "src/update-proyectos-imagenes.ts"
  ]
}